<div class="container devise-form">
    <header class="kosugi brand-link p-2 text-center position-relative">
        <%= link_to root_path , class:"brand-link text-main" do %>
            <h1 class="modak text-main">Graphy</h1>
        <% end %>
        <h4 class="kosugi text-dark mt-3">ユーザーアカウントを作成</h4>
    </header>
    <div class="container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-2"}) do |f| %>
            <p><%= render "users/shared/error_messages", resource: resource %></p>

            <p class="d-inline-block kosugi mb-0">アバター画像</p>
            <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
            <p class="d-block kosugi mb-1">※ご本人の顔がわかる写真を掲載してください</p>
            <div class="d-flex">
                <%= f.label :avatar, class:"registration-avatar rounded position-relative mt-0 mb-3 bg-main d-flex align-items-center justify-content-center", style:"height:100px; width:100px;" do %>
                    <div class="avatar-description rounded d-flex align-items-center justify-content-center position-absolute text-white w-100 h-100">画像をアップロード</div>
                    <i class="fas fa-user fa-4x text-white"></i>
                    <%= f.file_field :avatar, id: "user_avatar", class:"d-none" %>
                <% end %>
                <div class="avatar_preview ml-2 my-0 d-none" id="user_avatar_preview">
                    <img id="user_thumbnail" class="avatar_content m-1 p-1 border rounded" accept="image/*" src="">
                    <p class="avatar_text">画像をアップロード済み</p>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :name do %>
                    <p class="d-inline-block kosugi mb-0 d-none text-center">ユーザー名</p>
                    <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                <% end %>
                <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
            </div>

            <div class="form-group">
                <%= f.label :email do %>
                    <p class="d-inline-block kosugi mb-0">メールアドレス</p>
                    <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                <% end %>
                <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力してください", autocomplete: "email" %>
            </div>

            <div class="form-group">
                <%= f.label :password do %>
                    <p class="d-inline-block kosugi mb-0">パスワード</p>
                    <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                <% end %>
                <% if @minimum_password_length %>
                    <p class="kosugi mb-0">(<%= @minimum_password_length %>文字以上入力してください)</p>
                <% end %><br />
                <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力してください", autocomplete: "off" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation do %>
                    <p class="d-inline-block kosugi mb-0">確認用パスワード</p>
                    <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                <% end %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
            </div>

            <div class="form-group">
                <div>
                    <%= f.label :sex_type do %>
                        <p class="d-inline-block kosugi mb-0">性別</p>
                        <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                    <% end %>
                </div>
                <div class="form-check form-check-inline">
                    <%= f.radio_button :sex_type, :male, class: "form-check-input", id: "inlineRadio1" %>
                    <%= f.label :inlineRadio1, "男性", class:"form-check-label" %>
                </div>
                <div class="form-check form-check-inline">
                    <%= f.radio_button :sex_type, :female, class: "form-check-input", id: "inlineRadio2" %>
                    <%= f.label :inlineRadio2, "女性", class:"form-check-label" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :prefecture_id do %>
                    <p class="d-inline-block kosugi mb-0">居住エリア</p>
                    <p class="d-inline-block bg-main text-white p-1 mb-0 rounded kosugi">必須</p>
                <% end %>
                <div class="position-relative">
                    <i class="fas fa-chevron-down select-arrow"></i>
                    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture, {prompt: "選択してください"}, class:"prefecture-select w-100 px-2 border border-main rounded" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :self_introduction do %>
                    <p class="d-inline-block kosugi mb-0">自己紹介文(最大500文字)</p>
                <% end %>
                <%= f.text_area :self_introduction, maxlength: "500", rows: "10", class: "form-control" %>
            </div>

            <div class="text-center">
                <%= f.submit "Graphyをはじめる", class: "btn submit-btn btn-main text-white font-weight-bold w-50 p-2 rounded" %>
                <%= render "users/shared/links" %>
            </div>
        <% end %>
    </div>
    
</div>


