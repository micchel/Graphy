<div class="container-fluid px-0">
    <div class="row">
        <div class="col-lg-3 pr-lg-0" style="z-index: 1030" >
            <%= render 'shared/photographer-sidebar' %>
        </div>

        <div class="col-lg-9 pl-lg-0 bg-light overflow-auto">
            <header class="w-100 bg-white text-center py-2 border-bottom-sub">
                <h3 class="text-dark kosugi header-text mb-0"><i class="fas fa-comments pr-1"></i>チャット一覧</h3>
            </header>
            <div class="container">
                <div class="mt-3">
                    <div class="text-center mb-2">
                        <h4 class="kosugi header-text">10人とマッチングしています</h4>
                    </div>
                    <div class="mt-3 p-0">

                        <div class="d-flex align-items-center  py-2 px-0 border-bottom">
                            <div class="d-flex align-items-center w-100">
                                <div class="chat-avator overflow-hidden rounded-circle mr-3">
                                    <%= image_pack_tag 'images/man-1.jpg', class:"h-100 w-100 img-fluid object-cover"%>
                                </div>
                                <div class="overflow-hidden">
                                    <h4 class="kosugi chat-name">ユーザー1</h4>
                                </div>
                            </div>
                            <div class="chat-number d-flex align-items-end bg-danger justify-content-center text-white rounded-circle">
                                <h4 class="kosugi inline-block">100</h4>
                            </div>
                        </div>
                        
                    </div>
                <div>
            </div>
        </div>

    </div>
</div>