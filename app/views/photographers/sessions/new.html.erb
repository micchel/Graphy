<div class="devise-form container">
    <header class="devise-form-header">
        <%= link_to root_path, class:"brand-link" do %>
            <h1 class="logo text-sub">Graphy</h1>
        <% end %>
        <h4 class="registration-description">フォトグラファーログイン</h4>
    </header>
    <div class="devise-content container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-2"}) do |f| %>
            <div class="form-group">
                <%= f.label :email do %>
                    <p class="item-name">メールアドレス</p>
                <% end %>
                <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレスを入力してください" %>
            </div>

            <div class="form-group">
                <%= f.label :password do %>
                    <p class="item-name">パスワード</p>
                <% end %>
                <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "パスワードを入力してください" %>
            </div>

            <div class="form-group text-center">
                <%= f.submit "ログインする", class: "submit-btn btn-sub btn" %>
                <!-- <%= render "photographers/shared/links" %> -->
            </div>
        <% end %>
    </div>
</div>